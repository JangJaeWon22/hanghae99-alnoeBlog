<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>

    <!-- 날짜 CDN -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"
    ></script>
    <script src="/js/api.js"></script>
    <title>게시판 만들기</title>
  </head>
  <style>
    .wrap {
      width: 800px;
      margin: auto;
    }

    .form-group {
      margin-top: 30px;
    }

    .label {
      margin-top: 20px;
    }

    .btncls {
      display: flex;
      justify-content: flex-end;
      flex-wrap: nowrap;
      margin-top: 10px;
    }

    .btn-primary {
      margin-left: 20px;
    }
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
    }

    .inputPwd {
      width: 200px;
      margin-left: 10px;
      -webkit-text-security: disc;
    }
  </style>
  <script>
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const borderDate = urlParams.get("borderDate");
    let user;
    getSelf(function (u) {
      user = u;
    });

    $(document).ready(function () {
      get_detail();
    });
    //상세페이지 정보
    //a 태그로 들어온 정보를 주소에 파라미터 값으로 넣어서 ajax콜을 함.
    function get_detail() {
      $.ajax({
        type: "GET",
        url: `api/borderList/${borderDate}`,
        headers: {
          authorization: `Bearer ${localStorage.getItem("token")}`,
        },
        success: function (response) {
          let bordersDetail = response["borderDetail"];
          //시간 표시를 이쁘게 하기위해서 변수에 지정해줌
          let dateDetail = bordersDetail["borderDate"];
          //시간이 저장된 변수에 date moment 포맷으로 변경
          let date = moment(bordersDetail["borderDate"]).format(
            "YYYY-MM-DD HH:mm"
          );
          // console.log(bordersDetail)
          // console.log(date)
          $("#borderName").val(bordersDetail["borderTitle"]);
          $("#borderNick").text(bordersDetail["borderUserNick"]);
          $("#borderDate").text(date);
          $("#borderContent").text(bordersDetail["borderContent"]);
        },
        error: function (xhr, status, error) {
          if (status == 401) {
            alert("로그인이 필요합니다.");
          } else if (status == 404) {
            alert("존재하지 않는 상품입니다.");
          } else {
            alert("알 수 없는 문제가 발생했습니다. 관리자에게 문의하세요~");
          }
          window.location.href = "/borderList";
        },
      });
    }

    //글 수정 전 비밀번호 확인을 위해 모달창 이용
    function modal_start() {
      $("#cartModal").modal("show");
    }

    //get_detail() 함수에서 가져온 비밀번호를 서로 비교 하려 했으나, 능력부족으로 인해
    // 새로 ajax콜을 하여 값을 가져옴
    function modal_ok() {
      $.ajax({
        type: "GET",
        url: `api/borderList/${borderDate}`,
        headers: {
          authorization: `Bearer ${localStorage.getItem("token")}`,
        },
        success: function (response) {
          let bordersInfo = response["borderDetail"];
          //db에 저장된 비밀번호 가져오기
          let pwd = bordersInfo["borderPwd"];
          let confirmPwd = $(borderPwd).val();
          //비밀번호 입력창에 입력한 값과 db로 가져온 pwd를 비교하여 검사
          if (pwd === confirmPwd) {
            if (bordersInfo["borderUserNick"] == user.userId) {
              correct();
            } else {
              alert("비밀번호가 다릅니다.");
            }
          }
        },
      });
    }

    // 글을 수정하면서 date 값도 바꾸려고 했으나, date값은 api get할 시 필요한 데이터이기도 하고, 서버와의 연결도 date로 하기 때문에 변경 안함.
    function correct() {
      $.ajax({
        type: "PATCH",
        url: `/api/borderList/${borderDate}`,
        data: {
          //바뀐 데이터
          borderTitle: $(borderName).val(),
          borderUserNick: user.userId,
          borderContent: $(borderContent).val(),
        },
        success: function (response) {
          if (response["result"] == "success") {
            alert("글이 등록 되었습니다.");
            window.location.href = "/borderList";
          }
        },
      });
    }
    //취소 버튼 시 뒤로가기 기능
    function back() {
      location.href = "javascript:history.back();";
    }
  </script>

  <body>
    <div id="logout">
      <button class="btn btn-primary" type="submit" onclick="signOut()">
        로그아웃
      </button>
    </div>
    <div class="wrap">
      <h1>샘플 게시판</h1>
      <div class="form-group">
        <div class="label">
          <label for="exampleFormControlInput1" style="font-weight: bold"
            >제목 :</label
          >
          <input id="borderName" />
        </div>
        <div class="label">
          <label for="exampleFormControlInput1" style="font-weight: bold"
            >작성자 :</label
          >
          <label id="borderNick"></label>
        </div>
        <div class="label">
          <label for="exampleFormControlInput1" style="font-weight: bold"
            >작성했던 날짜 :
          </label>
          <label id="borderDate"></label>
        </div>
        <div class="label">
          <label for="exampleFormControlInput1">내용</label>
          <textarea
            class="form-control"
            id="borderContent"
            type="text"
            rows="10"
          ></textarea>
        </div>
      </div>
      <div class="btncls">
        <button class="btn btn-primary" type="submit" onclick="modal_start()">
          수정 완료
        </button>
        <button class="btn btn-primary" type="submit" onclick="back()">
          취소
        </button>
      </div>
    </div>
    <div
      class="modal text-left"
      id="cartModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="cartModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="cartModalLabel">알림</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">비밀번호를 입력하세요</div>
          <input
            class="inputPwd"
            id="borderPwd"
            type="number"
            placeholder="숫자를 입력하세요"
          />
          <div class="modal-footer">
            <button type="button" class="btn btn-sparta" onclick="modal_ok()">
              확인
            </button>
            <button
              type="button"
              class="btn btn-outline-sparta"
              data-dismiss="modal"
            >
              취소
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
