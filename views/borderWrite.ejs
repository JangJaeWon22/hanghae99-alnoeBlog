<style>
  .wrap {
    width: 800px;
    margin: auto;
  }

  .form-group {
    margin-top: 30px;
  }

  .label {
    margin-top: 20px;
  }

  .btncls {
    display: flex;
    justify-content: flex-end;
    flex-wrap: nowrap;
